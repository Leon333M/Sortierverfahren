{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build CachingProjekt mit MSVC",
      "type": "shell",
      "command": "cl",
      "args": [
        "/EHsc",
        "/std:c++17",
        "src\\main.cpp",
        "/link",
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$msCompile"
      ]
    },
    {
      "label": "latexindent main.tex",
      "type": "shell",
      "command": "perl",
      "args": [
        "E:/Code/LaTeX/scripts/latexindent/latexindent.pl",
        "main.tex",
        "-l",
        "build/indent.log",
        "-c",
        "build"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "pdflatex main.tex",
      "type": "shell",
      "command": "pdflatex",
      "args": [
        "-aux-directory=build",
        "main.tex"
      ],
      "group": {
        "kind": "build"
      },
      "problemMatcher": [
        "$latex"
      ]
    }
  ]
}